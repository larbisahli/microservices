{
  "name": "media-server",
  "version": "1.0.0",
  "main": "./dist/server.js",
  "author": "Dropgala Ltd.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "npx rimraf ./dist && tsc",
    "postbuild": "copyfiles -u 1  ./src/proto/*.proto ./src/graphql/schema/*.graphql ./src/graphql/storefront/schema/*.graphql ./dist && echo 'Files copied.'",
    "watch": "tsc --watch",
    "start": "cross-env NODE_ENV=production node ./dist/server.js",
    "start-dev": "cross-env NODE_ENV=development node ./dist/server.js",
    "nodemon": "cross-env NODE_ENV=development nodemon ./dist/server.js",
    "dev": "concurrently \"yarn:watch\" \"yarn:nodemon\"",
    "test": "concurrently \"yarn:watch\" \"yarn:test-watch\"",
    "test-watch": "jest --watch",
    "format": "prettier --write \"**/*.ts\"",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org business-server --project node ./dist && sentry-cli sourcemaps upload --org business-server --project node ./dist"
  },
  "_moduleAliases": {
    "@config": "dist/config/index",
    "@ts-types": "dist/ts-types",
    "@lib": "dist/lib",
    "@routes": "dist/routes",
    "@core": "dist/core"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.321.1",
    "@keyv/mongo": "^2.2.8",
    "@sentry/node": "^7.59.2",
    "async": "^3.2.4",
    "axios": "^1.1.3",
    "bcryptjs": "^2.4.3",
    "concurrently": "^7.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "keyv": "^4.5.2",
    "module-alias": "^2.2.2",
    "mongodb": "^6.1.0",
    "nodemailer": "^6.9.4",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "underscore": "^1.13.1",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-mongodb": "^5.1.1"
  },
  "devDependencies": {
    "@types/async": "^3.2.20",
    "@types/bcryptjs": "^2.4.2",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/express-form-data": "^2.0.2",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^27.5.1",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.11.9",
    "@types/underscore": "^1.11.4",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^28.1.2",
    "lint-staged": "^12.0.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.9.4"
  }
}
